{
  "heatmap_overlay_engine": {
    "enabled": true,
    "domains": [
      "sports",
      "markets"
    ],
    "heatmap_fields": {
      "confidence_score": true,
      "trap_density": true,
      "volatility_flag": true,
      "RBS_score": true,
